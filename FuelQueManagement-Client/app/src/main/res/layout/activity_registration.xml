<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color2"
    tools:context=".Registration">


    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="362dp"
        android:orientation="vertical"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.273">

        <EditText
            android:id="@+id/edtTxt_fname"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_field"
            android:ems="10"
            android:hint="@string/FullName"
            android:inputType="textPersonName"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            />

        <EditText
            android:id="@+id/edtTxt_username"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_field"
            android:ems="10"
            android:hint="@string/Username"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.422"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias="0.314" />

        <EditText
            android:id="@+id/edtTxt_location"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_field"
            android:ems="10"
            android:hint="@string/Location"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.422"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.418" />


        <EditText
            android:id="@+id/edtTxt_stationName"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_field"
            android:ems="10"
            android:hint="@string/StationName"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.422"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.519" />

        <EditText
            android:id="@+id/edtTxt_password"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_field"
            android:ems="10"
            android:hint="@string/Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.422"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.519" />

        <EditText
            android:layout_marginTop="8dp"
            android:id="@+id/edtTxt_confirmPassword"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:background="@drawable/input_field"
            android:ems="10"
            android:hint="@string/ConfirmPassword"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.422"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxt_password"
            app:layout_constraintVertical_bias="0.094" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.751" />

</androidx.constraintlayout.widget.ConstraintLayout>